extends layout 
block content 
    .profile-header
        img(src=`https://res.cloudinary.com/dmftho0cx/image/upload/${deletingUser.profile_picture}`)
        if deletingUser.displayName == ""
            h1=deletingUser.first_name 
        else 
            h1=deletingUser.displayName
        h2=deletingUser.username 
            if deletingUser.isVerified 
                span &nbsp;
                i.fas.fa-check 
        if deletingUser.isAdmin
            small Verified admin
        p=deletingUser.description
        if deletingUser.followers == 1
            b=`${deletingUser.followers} Follower  | `
        else
            b=`${deletingUser.followers} Followers  | `
        b=`${deletingUser.following.length} Following`
        hr.bg-light
        a(href=`/admin/delete/${deletingUser.username}`) 
            button.bg-danger.text-light.py-2(style="font-size: 1.5rem") Delete account